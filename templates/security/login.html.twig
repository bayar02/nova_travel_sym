{% extends 'base.html.twig' %}

{% block title %}Welcome to Bayar{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .social-icons {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin-top: 1rem;
        }
        .social-icons a {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
            transition: all 0.3s ease;
        }
        .social-icons .facebook {
            background-color: #1877f2;
            color: white;
        }
        .social-icons .google {
            background-color: #ea4335;
            color: white;
        }
        .social-icons a:hover {
            transform: scale(1.1);
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }
        .login-options {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 1rem 0;
        }
        .remember-me {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        .forgot-link a {
            color: #1877f2;
            text-decoration: none;
        }
        .forgot-link a:hover {
            text-decoration: underline;
        }
        .divider {
            text-align: center;
            margin: 1rem 0;
            position: relative;
        }
        .divider::before,
        .divider::after {
            content: "";
            position: absolute;
            top: 50%;
            width: 45%;
            height: 1px;
            background-color: #ddd;
        }
        .divider::before {
            left: 0;
        }
        .divider::after {
            right: 0;
        }
        .input-box {
            position: relative;
        }
        .input-box i {
            position: absolute;
            left: 10px;
            top: 50%;
            transform: translateY(-50%);
            color: #666;
        }
        .input-box input {
            padding-left: 35px;
        }
    </style>
{% endblock %}

