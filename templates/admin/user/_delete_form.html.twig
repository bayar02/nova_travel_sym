{# templates/admin/user/_delete_form.html.twig #}
{# Expects user_id to be passed in #}
<form method="post" action="{{ path('admin_user_delete', {'id': user_id}) }}" onsubmit="return confirm('Are you sure you want to delete this user?');" style="display: inline;"> {# Use inline style or CSS class #}
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user_id) }}">
    {# Style button consistently with edit link #}
    <button class="btn-delete">Delete</button> 
</form> 