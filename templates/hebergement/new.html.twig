{% extends 'base.html.twig' %}

{% block title %}Nouvel Hébergement{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background-color: #f0f8ff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1000px;
            height: 90vh; /* Prend 90% de la hauteur de la fenêtre */
            overflow-y: auto; /* Active la barre de défilement verticale si nécessaire */
            margin: 60px auto;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            padding: 40px 50px;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
            color: #007BFF;
        }

        .form-row {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .form-group {
            margin-bottom: 20px;
            flex: 1 1 100%;
        }

        .form-group.half {
            flex: 1 1 48%;
        }

        label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
        }

        input[type="text"],
        input[type="number"],
        input[type="file"],
        textarea,
        select {
            width: 100%;
            padding: 10px 12px;
            border-radius: 8px;
            border: 1px solid #ccc;
            box-sizing: border-box;
            font-size: 15px;
        }

        textarea {
            min-height: 100px;
        }

        button.btn {
            width: 100%;
            background-color: #007BFF;
            color: #fff;
            border: none;
            padding: 12px;
            border-radius: 8px;
            font-size: 16px;
            cursor: pointer;
            transition: background 0.3s;
        }

        button.btn:hover {
            background-color: #0056b3;
        }

        .back-link {
            display: block;
            margin-top: 20px;
            text-align: center;
            color: #555;
            text-decoration: none;
        }

        .back-link:hover {
            text-decoration: underline;
        }

        .error-message {
            color: red;
            margin-bottom: 15px;
            font-weight: bold;
        }
        .form-scroll {
    max-height: 70vh; /* ajuste selon la taille souhaitée */
    overflow-y: auto;
    padding-right: 10px; /* évite que la scrollbar cache le contenu */
}

.error-message {
            color: #dc3545;
            font-size: 0.875em;
            margin-top: 5px;
        }

        input.error, 
        textarea.error, 
        select.error {
            border-color: #dc3545;
        }

        /* This will style the error messages that Symfony generates */
        .form-error {
            color: #dc3545;
            font-size: 0.875em;
            margin-top: 5px;
        }
    </style>
{% endblock %}


{% block body %}
    <div class="container">
        <h1>Créer un Hébergement</h1>

       
        <div class="form-scroll">
            {{ include('hebergement/_form.html.twig') }}
        </div>

        <a href="{{ path('app_hebergement_index') }}" class="back-link">← Retour à la liste</a>
    </div>
{% endblock %}

