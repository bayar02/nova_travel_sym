{% extends 'base.html.twig' %}

{% block title %}Réponses{% endblock %}

{% block stylesheets %}
    <style>
        .container-fluid-custom {
            padding: 40px 60px;
        }

        h1 {
            text-align: center;
            color: #333;
            margin-bottom: 30px;
        }

        .card {
            background-color: #fff;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
        }

        .table-wrapper {
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 10px;
            margin-top: 10px;
            min-width: 900px;
        }

        thead th {
            background-color: #f3f3f3;
            padding: 12px 16px;
            text-align: left;
            border-radius: 8px;
        }

        tbody tr {
            background-color: #fafafa;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        tbody tr:hover {
            transform: scale(1.005);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
        }

        tbody td {
            padding: 12px 16px;
            border-top: 1px solid #eee;
        }

        .actions a {
            margin-right: 10px;
            color: #007bff;
            text-decoration: none;
        }

        .actions a:hover {
            text-decoration: underline;
        }

        .create-button {
            margin-top: 20px;
            display: inline-block;
            padding: 10px 15px;
            background-color: #28a745;
            color: #fff;
            border-radius: 5px;
            text-decoration: none;
        }

        .create-button:hover {
            background-color: #218838;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid container-fluid-custom">
        <a href="{{ path('app_reponse_new') }}" class="create-button">
            <i class='bx bx-plus'></i> Créer une nouvelle réponse
        </a>

        <h1>Liste des Réponses</h1>
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="table-wrapper">
                    <table>
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Message</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for reponse in reponses %}
                                <tr>
                                    <td>{{ reponse.id }}</td>
                                    <td>{{ reponse.message }}</td>
                                    <td>{{ reponse.dateReponse ? reponse.dateReponse|date('Y-m-d') : '' }}</td>
                                    <td class="actions">
                                        <a href="{{ path('app_reponse_show', {'id': reponse.id}) }}">
                                            <i class='bx bx-show'></i> Show
                                        </a>
                                        <a href="{{ path('app_reponse_edit', {'id': reponse.id}) }}">
                                            <i class='bx bx-edit'></i> Edit
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" style="text-align: center;">Aucune réponse trouvée.</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
