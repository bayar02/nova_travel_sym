{% extends 'user/base_user.html.twig' %}

{% block user_title %}Edit Profile{% endblock %}

{% block user_content %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-2xl font-bold mb-6">Edit Profile</h1>
        
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
            {{ form_start(form) }}
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        {{ form_row(form.prenom, {
                            'attr': {'class': 'w-full px-3 py-2 border rounded-md'},
                            'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}
                        }) }}
                    </div>
                    <div>
                        {{ form_row(form.nom, {
                            'attr': {'class': 'w-full px-3 py-2 border rounded-md'},
                            'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}
                        }) }}
                    </div>
                    <div>
                        {{ form_row(form.cin, {
                            'attr': {'class': 'w-full px-3 py-2 border rounded-md'},
                            'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}
                        }) }}
                    </div>
                    <div>
                        {{ form_row(form.tel, {
                            'attr': {'class': 'w-full px-3 py-2 border rounded-md'},
                            'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}
                        }) }}
                    </div>
                    <div>
                        {{ form_row(form.mail, {
                            'attr': {'class': 'w-full px-3 py-2 border rounded-md'},
                            'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300'}
                        }) }}
                    </div>
                </div>

                <div class="mt-6">
                    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
                        Update Profile
                    </button>
                    <a href="{{ path('app_profile') }}" class="ml-4 text-gray-600 hover:text-gray-800">
                        Cancel
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %} 